resources:
- apiVersion: v1
  kind: Secret
  metadata:
    name: {{ .Release.Name }}-admin-password
  type: Opaque
  data:
    adminPassword: {{ "123456" | b64enc | quote }}

- apiVersion: mongodbcommunity.mongodb.com/v1
  kind: MongoDBCommunity
  metadata:
    name: {{ .Release.Name }}
  spec:
    members: 1
    type: ReplicaSet
    version: "4.2.8"
    security:
      authentication:
        modes: ["SCRAM"]
      roles:
      - role: readWriteMinusDropRole
        db: kdl
        privileges:
        - resource:
            db: kdl
            collection: ""
          actions:
          - collStats
          - dbHash
          - dbStats
          - find
          - killCursors
          - listIndexes
          - listCollections
          - convertToCapped
          - createCollection
          - createIndex
          - dropIndex
          - insert
          - remove
          - renameCollectionSameDB
          - update
        roles: []
    users:
    - name: admin
      db: admin
      passwordSecretRef:
        name: {{ .Release.Name }}-admin-password
        key: adminPassword
      roles:
      - name: root
        db: admin
      - name: readWriteMinusDropRole
        db: kdl
      scramCredentialsSecretName: {{ .Release.Name }}-admin
      connectionStringSecretName: {{ .Release.Name}}-admin-connection-string
